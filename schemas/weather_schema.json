{
  "type": "object",
  "required": ["coord", "weather", "main", "name", "cod"],

  "properties": {

    "coord": {
      "type": "object",
      "required": ["lat", "lon"],
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      }
    },

    "weather": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["main", "description"],
        "properties": {
          "main": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },

    "main": {
      "type": "object",
      "required": ["temp", "pressure", "humidity"],
      "properties": {
        "temp": { "type": "number" },
        "pressure": { "type": "number" },
        "humidity": { "type": "number" }
      }
    },

    "name": {
      "type": "string"
    },

    "cod": {
      "type": "number"
    }
  }
}
